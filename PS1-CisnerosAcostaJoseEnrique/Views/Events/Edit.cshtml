@model PS1_CisnerosAcostaJoseEnrique.Models.Event

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Evento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-10">
                <h5>Nombre de Evento</h5>
                @Html.EditorFor(model => model.nombreevento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreevento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h5>Fecha de Evento</h5>
                <input type="date" name="Fecha del Evento" value="" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h5>Artistas Invitados</h5>
                @Html.EditorFor(model => model.artistas, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.artistas, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <h5>Comida de Evento</h5>
                @Html.EditorFor(model => model.comida, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.comida, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a eventos", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
