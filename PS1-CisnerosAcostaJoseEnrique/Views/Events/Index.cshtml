@model IEnumerable<PS1_CisnerosAcostaJoseEnrique.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Eventos</h2>

<p>
    @Html.ActionLink("Crear nuevo evento", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nombre del Evento
        </th>
        <th>
           Fecha del Evento
        </th>
        <th>
            Artistas Invitados
        </th>
        <th>
            Comida del Evento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreevento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaevento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.artistas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.comida)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<img src="~/Content/img/collageevent.jpg" class="center-block">

